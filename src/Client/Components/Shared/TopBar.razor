<div class="sticky top-0 z-50 bg-background/10 backdrop-blur-md text-foreground border-b border-border">
    <div class="container mx-auto flex items-center justify-between p-3">
        <div class="flex items-center justify-between w-full gap-4 lg:w-auto">
            <button class="lg:hidden p-2" onclick="window.toggleNav()">
                <Blazicon Svg='GoogleMaterialRoundIcon.Menu.WithSize("150%")' class="text-primary"/>
            </button>
            <div id="nav-left"
                 class="w-full hidden gap-2 mt-3 flex-col lg:flex lg:flex-row lg:justify-center lg:items-center lg:gap-4 lg:mt-0 lg:w-auto text-primary font-bold text-md">
                <a href="/" class="flex items-center gap-2 text-primary font-bold text-md">
                    <Blazicon Svg='GoogleMaterialRoundIcon.Home.WithSize("200%")'/>
                    <span>Home</span>
                </a>
                <a class="text-muted-foreground hover:text-primary transition-colors cursor-pointer">About us</a>
                <a class="text-muted-foreground hover:text-primary transition-colors cursor-pointer">FAQ</a>
                <a class="text-muted-foreground hover:text-primary transition-colors cursor-pointer">Contact</a>
            </div>
        </div>

        <div class="flex items-center gap-2">
            <button
                class="relative p-2 mr-2 flex items-center justify-center rounded-md text-muted-foreground hover:text-primary hover:bg-primary-foreground transition-colors"
                onclick="window.toggleTheme()">
                <Blazicon Svg='GoogleMaterialRoundIcon.DarkMode.WithSize("110%")'
                          class="absolute rotate-0 dark:rotate-90 opacity-100 dark:opacity-0"/>
                <Blazicon Svg='GoogleMaterialRoundIcon.LightMode.WithSize("110%")'
                          class="absolute dark:rotate-0 rotate-90 dark:opacity-100 opacity-0"/>
            </button>

            <a href="/Login"
               class="shadow-md hidden lg:block p-2 font-bold border border-border rounded-md text-primary hover:bg-primary-foreground transition-colors">
                Login
            </a>
            <a href="/Register"
               class="shadow-md hidden lg:block p-2 font-bold border border-border rounded-md text-secondary bg-[#108a37] hover:bg-[#1aa65f] transition-colors">
                Sign Up
            </a>
        </div>
    </div>
</div>

