<div
    class="flex flex-col-reverse md:justify-center md:items-center lg:flex-row items-center justify-center gap-6 p-4 lg:p-10 w-full max-w-screen-xl mx-auto">

    <Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(2)">
        <div id="slogan"
             class="flex flex-col items-start text-left gap-4 sm:items-center sm:text-center lg:items-start lg:text-left max-w-lg">
            <h1 class="text-4xl lg:text-5xl font-bold leading-tight">
                <span class="text-[#21bf73]">#1</span>
                <span>Shop In Georgia</span>
            </h1>
            <span class="text-base lg:text-lg text-primary">
                Your Favorite Products, Just a Click Away! A seamless shopping experience for all your needs, right here in Georgia.
            </span>
            <a href="/Login"
               class="inline-block px-6 py-3 font-bold border border-border rounded-md transition-colors duration-200 text-white bg-[#108a37] hover:bg-[#1aa65f] cursor-pointer">
                Get Started
            </a>
        </div>

    </Animate>

    <Animate Animation="Animations.ZoomInLeft" Duration="TimeSpan.FromSeconds(1)">
        <div id="cart" class="hidden sm:block">
            <img src="Images/Categories/Cart.png" alt="cart"
                 class="max-w-[80vw] sm:max-w-[45vw] max-h-[45vh] w-auto h-auto"/>
        </div>
    </Animate>
</div>

<div class="animate-bounce relative mt-10">
    <Blazicon Svg='GoogleMaterialRoundIcon.ArrowDownward.WithSize("200%")' class="text-primary"/>
</div>